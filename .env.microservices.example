# Environment variables for microservices infrastructure

# =====================
# SECURITY
# =====================
JWT_ACCESS_SECRET=your-super-secret-jwt-access-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-jwt-refresh-key-change-in-production
SERVICE_API_KEY=your-service-to-service-api-key-change-in-production

# =====================
# MAIN DATABASE (Legacy)
# =====================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=todo_app
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/todo_app

# =====================
# AUTH SERVICE DATABASE
# =====================
AUTH_POSTGRES_USER=postgres
AUTH_POSTGRES_PASSWORD=postgres
AUTH_POSTGRES_DB=auth_service
AUTH_DATABASE_URL=postgresql://postgres:postgres@postgres-auth:5432/auth_service

# =====================
# AI SERVICE DATABASE (Future)
# =====================
AI_POSTGRES_USER=postgres
AI_POSTGRES_PASSWORD=postgres
AI_POSTGRES_DB=ai_service
AI_DATABASE_URL=postgresql://postgres:postgres@postgres-ai:5432/ai_service

# =====================
# AI SERVICE (Future)
# =====================
OPENAI_API_KEY=your-openai-api-key

# =====================
# MONITORING
# =====================
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# =====================
# REDIS
# =====================
REDIS_URL=redis://redis:6379
