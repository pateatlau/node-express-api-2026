# Server Configuration
PORT=4002
NODE_ENV=development
SERVICE_NAME=user-profile-service

# Database Configuration
DATABASE_URL="postgresql://postgres:postgres@localhost:5434/profile_db?schema=public"

# Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_CACHE_TTL=3600

# CORS Configuration
CORS_ORIGIN=http://localhost:8080

# Auth Service Integration
AUTH_SERVICE_URL=http://localhost:4001
JWT_ACCESS_SECRET=your-super-secret-jwt-access-key-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-jwt-refresh-key-change-in-production-min-32-chars

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif

# Storage Configuration (local or s3)
STORAGE_TYPE=local
# S3_BUCKET=your-bucket-name
# S3_REGION=us-east-1
# S3_ACCESS_KEY_ID=your-access-key
# S3_SECRET_ACCESS_KEY=your-secret-key
# S3_ENDPOINT=https://s3.amazonaws.com

# Feature Flags
ENABLE_AVATAR_UPLOAD=true
ENABLE_PROFILE_ANALYTICS=true
ENABLE_CACHE=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
